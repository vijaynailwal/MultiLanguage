<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android" tools:context=".MainActivity"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

    <android.support.v7.widget.AppCompatTextView android:layout_height="wrap_content"
                                                 android:layout_width="match_parent" android:textSize="40sp"
                                                 android:textColor="@color/colorPrimaryDark"
                                                 android:text="@string/applicant_name" android:padding="10dp"
                                                 android:gravity="center" android:id="@+id/tvHeader"/>

    <View android:layout_height="1dp" android:layout_width="match_parent" android:id="@+id/view"
          android:background="@color/colorPrimary" android:layout_below="@+id/tvHeader"/>

    <android.support.v7.widget.AppCompatSpinner android:layout_height="wrap_content" android:layout_width="match_parent"
                                                android:id="@+id/spinner" android:background="@drawable/spinner_style"
                                                android:layout_below="@+id/view" android:layout_margin="10dp"/>

    <android.support.v7.widget.AppCompatTextView android:layout_height="wrap_content"
                                                 android:layout_width="match_parent" android:textSize="14sp"
                                                 android:textColor="@color/colorAccent" android:text="@string/info"
                                                 android:padding="10dp" android:layout_below="@+id/spinner"
                                                 android:layout_marginTop="-10dp"/>

    <android.support.v7.widget.AppCompatButton android:layout_height="wrap_content" android:layout_width="match_parent"
                                               android:textColor="@android:color/white" android:text="@string/exit"
                                               android:id="@+id/btExit" android:background="@drawable/btn_background"
                                               android:layout_margin="10dp" android:layout_alignParentBottom="true"/>

</RelativeLayout>